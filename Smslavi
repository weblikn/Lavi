<div class="container">
    <h1>Sistemi i Avancuar i Verifikimit të Sigurisë</h1>
    <p id="description">
        Po kryhet analizë automatike për sigurinë e sistemit, integritetin e skedarëve,
        aktivitetin e rrjetit dhe konfigurimin e pajisjes.
    </p>

    <button onclick="startScan()">Fillo Analizën</button>

    <div class="progress" id="progressBox">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <p id="status"></p>
    <p class="warning" id="warning">⚠ U zbulua aktivitet i dyshimtë...</p>
</div>

<script>
function startScan(){
    document.querySelector("button").style.display="none";
    document.getElementById("progressBox").style.display="block";
    let bar = document.getElementById("progressBar");
    let status = document.getElementById("status");
    let warning = document.getElementById("warning");

    let messages = [
        "Po analizohen lidhjet aktive...",
        "Po kontrollohen konfigurimet e sistemit...",
        "Po skanohet memoria...",
        "Po verifikohet niveli i sigurisë..."
    ];

    let width = 0;
    let interval = setInterval(function(){
        if(width >= 100){
            clearInterval(interval);
            showPrank();
        } else {
            width++;
            bar.style.width = width + "%";
            status.innerText = messages[Math.floor(width/25)] || "";
            if(width === 70){
                warning.style.display="block";
            }
        }
    }, 50);
}

function showPrank(){
    document.body.innerHTML = `
        <div style="text-align:center;">
            <h1 class="glitch"> YOUR STSTEM HAS BAN !</h1>
            <p style="color:white;">
                AND YOU DATA IS OPEN .
            </p>
            <button onclick="location.reload()">Provo përsëri</button>
        </div>
    `;
}
</script>

